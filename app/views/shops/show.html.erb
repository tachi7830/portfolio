<div class='container'>
  <div class="row mt-5">
    <div class="col-4 offset-2">
      <%= image_tag @shop.image.url %>
    </div>
    <div class="col-6 mt-5">
      <div>
        <h2><%= @shop.name %></h2>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-3 offset-3 mt-5">
      <h4>News</h4>
    </div>
    <div class="col-4 mt-5">
      <h4><%= @shop.news %></h4>
    </div>
  </div>
  <div class="row mt-4 text-center">
    <% @breads.each do |bread| %>
    <div class="col-3">
      <div class="border border-secondary rounded mb-2" style="background-color: #f5deb3;">
        <div><%= image_tag bread.image.url, :size => "255x200", class: "img-fluid rounded mb-2" %></div>
        <p><%= bread.name %></p>
        <p><%= bread.price %>円</p>
      </div>
    </div>
    <% end %>
  </div>
  <div class="text-right mb-4"><%= link_to "全ての商品を見る" %> </div>
  <div class="row">
    <div class="col-12 my-4 text-center">
      <h4>店舗情報</h4>
    </div>
    <table class="table col-8 offset-2">
      <tr>
        <th>店名</th>
        <td><%= @shop.name %></td>
      </tr>
      <tr>
        <th>説明</th>
        <td><%= @shop.description %></td>
      </tr>
      <tr>
        <th>URL</th>
        <td><%= @shop.url %></td>
      </tr>
      <tr>
        <th>住所</th>
        <td><%= @shop.area %><%= @shop.address %></td>
      </tr>
      <tr>
        <th>電話番号</th>
        <td><%= @shop.phone_number %></td>
      </tr>
      <tr>
        <th>営業時間</th>
        <td><%= @shop.opening_hour %></td>
      </tr>
      <tr>
        <th>定休日</th>
        <td><%= @shop.closed_day %></td>
      </tr>
    </table>
  </div>
  <div class="row">
    <div class="col-12 mt-5 mb-4 text-center">
      <h4>レビュー一覧</h4>
    </div>
  </div>
  <div class="row">
    <% @articles.each do |article| %>
      <div class="col-2 text-center">
        <div>
          <% if article.user.image.present? %>
            <%= image_tag article.user.image.url%>
          <% else %>
            <%= image_tag("no_image_user.png", :size => "100x100") %>
          <% end %>
        </div>
        <p>
          <%= link_to user_path(article.user) do %>
            <%= article.user.name %>さん
          <% end %>
        </p>
        <p><%= article.created_at.strftime("%Y/%m/%d") %></p>
      </div>
      <div>
        <div>
          <% article.images.each do |image| %>
          <%= image_tag image.url, :size => "150x100" %>
          <% end %>
        </div>
        <p><%= article.bread_name %></p>
        <p><%= article.created_at.strftime("%Y/%m/%d") %></p>
        <p><%= article.bread_name %></p>
        <p><%= article.review %></p>
      </div>
      <% end %>
  </div>
</div>