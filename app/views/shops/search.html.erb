<div class='container'>
  <div class="row">
    <div class="col-8 offset-2 col-md-6 offset-md-3 col-lg-4 offset-lg-4 ribbon6 my-5">
      <h3>検索結果</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-12 col-lg-10 offset-lg-1">
      <table class="table border back-color">
        <thead>
          <tr>
            <th></th>
            <th>店名</th>
            <th>住所</th>
            <th>説明</th>
          </tr>
        </thead>
        <tbody>
          <% @searchs.each do |search| %>
          <tr>
            <td><%= image_tag search.image.url, :size => "150x100", class: "img-fluid border border-secondary rounded" %></td>
            <td>
              <strong>
                <%= link_to shop_path(search.id), class: "link-border" do %>
                  <%= search.name %>
                <% end %>
              </strong>
            </td>
            <td><%= search.address %></td>
            <td><%= search.description %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="pagination my-5"><%= paginate @searchs %></div>
</div>
