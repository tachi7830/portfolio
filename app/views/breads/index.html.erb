<div class='container'>
  <div class="col-8 offset-2 col-md-6 offset-md-3 col-lg-4 offset-lg-4 ribbon6 my-5">
    <h2>商品一覧</h2>
  </div>
  <div class="row mt-5">
    <div class="row col-12 col-lg-10 offset-lg-1 text-center">
    <% @breads.each do |bread| %>
    <div class="col-3 col-lg-3">
      <div class="border border-secondary rounded mb-2" style="background-color: #f5f5f5;">
        <div><%= image_tag bread.image.url, :size => "255x200", class: "img-fluid border border-secondary rounded" %></div>
        <p><%= bread.name %></p>
        <p><%= bread.price %>円</p>
      </div>
    </div>
    <% end %>
  </div>
  </div>
</div>

