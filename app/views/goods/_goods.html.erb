<% if user_signed_in? %>
  <% if article.gooded_by?(current_user) %>
    <%= link_to article_goods_path(article), class: "link-border", method: :delete, remote: true do %>
      <strong>いいね<i class="fas fa-heart good-color"><%= article.goods.count %></i></strong>
    <% end %>
  <% else %>
    <%= link_to article_goods_path(article), class: "link-border", method: :post, remote: true do %>
      <strong>いいね<i class="far fa-heart"><%= article.goods.count %></i></strong>
    <% end %>
  <% end %>
<% else %>
  <%= link_to new_user_session_path, class: "link-border", local: true do %>
    <strong>いいね<i class="fas fa-heart good-color"><%= article.goods.count %></i></strong>
  <% end %>
<% end %>