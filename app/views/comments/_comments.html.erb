<% article.comments.each do |comment| %>
  <% comment_user = comment.user %>
  <div class="col-12 col-md-8 offset-md-2 rounded border border-secondary mb-2">
    <div class="row">
      <div class="col-3 mt-3">
        <div class="text-center">
          <% if comment.user.image.present? %>
            <%= image_tag comment.user.image.url, class: "border border-secondary rounded", :size => "70x70" %>
          <% else %>
            <%= image_tag "no_image_user.png", class: "border border-secondary rounded", :size => "70x70" %>
          <% end %>
          <p>
            <%= link_to user_path(comment.user), class: "link-border" do %>
              <strong><%= comment.user.name %></strong>
            <% end %>
          </p>
        </div>
      </div>
      <div class="col-6 col-md-9 offset-md-0 mt-3">
        <%= comment.comment %>
        <p class="mt-4">
          <% if current_user == comment_user %>
          <strong>
            <%= link_to '削除', article_comment_path(comment.article.id, comment.id), class: "link-border", method: :delete, remote: true %>
          </strong>
          <% end %>
        </p>
      </div>
    </div>
  </div>
<% end %>

