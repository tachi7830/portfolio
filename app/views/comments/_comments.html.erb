<table>
  <% article.comments.each do |comment| %>
  <% comment_user = comment.user %>
  <tr>
    <td>
      <%= link_to user_path(article.user) do %>
        <%= image_tag article.user.image.url %><br>
        <%= article.user.name %>
      <% end %>
    </td>
    <td><%= comment.comment %></td>
    <% if current_user == comment_user %>
    <td><%= link_to '削除する', article_comment_path(comment.article.id, comment.id), method: :delete, remote: true %></td>
    <% end %>
  </tr>
  <% end %>
</table>
