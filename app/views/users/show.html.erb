<div class='container'>
  <div class="row">
    <div class="col-4 offset-4 my-5 text-center">
      <% if @user.image.present? %>
        <%= image_tag @user.image.url, size: "100x100", class: "rounded border border-secondary mx-auto" %>
      <% else %>
        <%= image_tag "no_image_user.png", size: "100x100", class: "rounded border border-secondary mx-auto" %>
      <% end %>
      <h6 class="mt-4"><%= @user.name %>さん</h6>
      <div>
        <strong>
          <% if @user == current_user %>
            <%= link_to "ユーザー情報編集する", edit_user_path, class: "link-border" %>
          <% end %>
        </strong>
      </div>
    </div>
  </div>
  <div class="text-center my-4">
    <h4>ブックマーク一覧</h4>
  </div>
  <div class="row">
    <div class="col-10 offset-1">
      <% @favourites.each do |favourite| %>
        <div class="row py-3 rounded border border-secondary">
          <div class="col-4">
            <%= image_tag favourite.shop.image.url, size: "120x100", class: "img-fluid rounded border border-secondary mx-auto" %>
          </div>
          <div class="col-4">
            <%= link_to shop_path(favourite.shop.id),class: "link-border" do %>
                <strong><%= favourite.shop.name %></strong>
              <% end %>
          </div>
          <div class="col-4">
            <%= favourite.shop.prefecture_code %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="my-4 text-center">
    <h3>投稿一覧</h3>
  </div>
  <% @articles.each do |article| %>
  <div class="row col-10 offset-1 rounded border border-secondary mb-3" style="background-color: #f5deb3;">
    <div class="col-12">
      <div class="row mb-3 mt-2">
        <% article.images.each do |image| %>
        <div class="col-3 mt-2">
          <%= image_tag image.url, size: "200x150", class: "img-fluid rounded border border-secondary"%>
        </div>
        <% end %>
      </div>
      <div class="row">
        <p class="col-4 col-md-3">店名</p>
        <div class="col-8 col-md-9">
          <%= link_to shop_path(article.shop.id), class: "link-border" do %>
            <strong><%= article.shop.name %></strong>
          <% end %>
        </div>
      </div>
      <div class="row">
        <p class="col-4 col-md-3">都道府県</p>
        <div class="col-8 col-md-9"><%= article.prefecture.name %></div>
      </div>
      <div class="row">
        <p class="col-4 col-md-3">購入品</p>
        <div class="col-8 col-md-9"><%= article.bread_name %></div>
      </div>
      <div class="row">
        <p class="col-4 col-md-3">レビュー</p>
        <div class="col-8 col-md-9"><%= article.review %></div>
      </div>
      <div class="row mt-3">
        <p class="col-4 col-md-3 mr-3">評価</p>
        <%= render 'articles/read_rates', article: article %>
      </div>
      <div class="row offset-3 mb-3">
        <div id="good_buttons_<%= article.id %>" class="mr-5">
          <%= render "goods/goods", article: article %>
        </div>
        <div>
          <strong>
            <%= link_to "コメントする", article_path(article.id), class: "link-border mr-5" %>
            <% if article.user == current_user %>
              <%= link_to "編集", edit_article_path(article.id), class: "link-border mr-5" %>
              <%= link_to "削除", article_path(article.id),class: "link-border", method: :delete, "data-confirm" => "本当に削除しますか？"%>
            <% end %>
          </strong>
        </div>
      </div>
    </div>
  </div>
  <% end %>
  <div class="pagination my-5"><%= paginate @articles%></div>
</div>