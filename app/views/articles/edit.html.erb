<div class='container'>
  <div class="row">
    <div class="col-12">
      <h2 class="my-4 offset-1">記事編集</h2>
      <%= form_with model: @article, local: true do |f| %>
        <div class="form-group row">
          <%= f.label :"商品画像", class: "col-3 h4"%>
          <%= f.attachment_field :article_images_images, multiple: true %>
        </div>
        <div class="field form-group row">
          <%= f.label :"店名", class: "col-3 h4" %>
          <%= f.collection_select :shop_id, Shop.all, :id, :name, include_blank: "選択して下さい" %>
        </div>
        <div class="field form-group row">
          <%= f.label :"購入した物", class: "col-3 h4" %>
          <%= f.text_field :bread_name, autofocus: true, placeholder:"クロワッサン", class: "form-control col-8" %>
        </div>
        <div class="field form-group row">
          <%= f.label :"ジャンル", class: "col-3 h4" %>
          <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択して下さい" %>
        </div>
        <div class="field form-group row">
          <%= f.label :"感想", class: "col-3 h4" %>
          <%= f.text_area :review, :size=>"60x12", class: "form-control col-8" %>
        </div>
        <div class="field form-group row" id="star" >
          <%= f.label :"評価", class: "col-3 h4" %>
          <%= f.hidden_field :rate, id: :review_star, class: "form-control" %>
        </div>
        <script>
          $('#star').raty({
            size     : 30,
            starOff:  '<%= asset_path('star-off.png') %>',
            starOn : '<%= asset_path('star-on.png') %>',
            starHalf: '<%= asset_path('star-half.png') %>',
            scoreName: 'article[rate]',
            half: true,
          });
        </script>
        <div class="row">
          <%= f.submit "投稿",class: 'btn btn_success btn-lg offset-3 mt-3' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
