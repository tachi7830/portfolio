<div class='container'>
  <div class="row">
    <div class="col-12 text-center mt-5 mb-3">
      <h3>ようこそ全国パン図鑑へ！</h3>
    </div>
  </div>
  <div class="row">
    <table class="table">
      <% @week_ranks.each.with_index(1)  do |article, i| %>
        <tr>
          <td>
            <h3 class="ml-4 mt-3"><%= i %>位</h3>
            <h5 class="mt-4">いいね数<%= article.goods.count %></h5>
          </td>
          <th class="row">
            <div class="col-4">
              <% if article.user.image.present? %>
                <%= image_tag article.user.image.url, :size => "80x80"%>
              <% else %>
                <%= image_tag("no_image_user.png", :size => "80x80") %>
              <% end %>
              <p>
                <%= link_to user_path(article.user) do %>
                  <%= article.user.name %>さん
                <% end %>
              </p>
            </div>
            <div>
              <%= link_to article_path(article.id) do %>
                <%= image_tag article.images[0].url, :size => "150x100", class: "rounded mb-2" %>
              <% end %>
            </div>
          </th>
          <th>
            
          </th>
        </tr>
      <% end %>
    </table>
  </div>
  <div class="row">
    <div class="col-8 offset-2 mb-5">
      <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
          <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img class="d-block w-100" src="assets/test.jpg" alt="First slide">
          </div>
          <div class="carousel-item">
            <img class="d-block w-100" src="assets/test.jpg" alt="Second slide">
          </div>
          <div class="carousel-item">
            <img class="d-block w-100" src="assets/test.jpg" alt="Third slide">
          </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-12 text-center my-4">
      <h4>新着記事一覧</h4>
    </div>
  </div>
  <div class="row col-8 offset-2">
  <% @articles.each do |article| %>
    <div class="row py-4 mb-4 border border-secondary rounded">
      <div class="col-2 text-center">
        <div class="mt-5 mb-2">
          <% if article.user.image.present? %>
            <%= image_tag article.user.image.url, :size => "80x80"%>
          <% else %>
            <%= image_tag("no_image_user.png", :size => "80x80") %>
          <% end %>
        </div>
        <p>
          <%= link_to user_path(article.user) do %>
            <%= article.user.name %>さん
          <% end %>
        </p>
        <p><%= article.created_at.strftime("%Y/%m/%d") %></p>
      </div>
      <div class="col-8">
        <div class="row mb-2">
          <% article.images.each do |image| %>
          <div class="col-4">
            <%= image_tag image.url, size: "200x100", class: "img-fluid rounded mr-2 mb-1"%>
          </div>
          <% end %>
        </div>
        <div class="row">
          <div class="col-12">
            <p><%= article.shop.name %></p>
            <p><%= article.prefecture.name %></p>
            <p><%= article.bread_name %></p>
            <p><%= article.review %></p>
            <div id="star-rate-<%= article.id %>">
              <script>
                // 繰り返し処理でもidをidを一意にできるようにnote_idを入れる
                $('#star-rate-<%= article.id %>').raty({
                  size: 30,
                  starOff:  '<%= asset_path('star-off.png') %>',
                  starOn : '<%= asset_path('star-on.png') %>',
                  starHalf: '<%= asset_path('star-half.png') %>',
                  half: true,
                  // 読み込みだけで入力できない
                  readOnly: true,
                  //投稿された星の入力値を読み込む
                  score: <%= article.rate %>,
                });
              </script>
              <%= article.rate%>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  </div>
</div>
