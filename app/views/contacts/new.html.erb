<div class='container'>
  <div class="row col-8 offset-2 col-md-6 offset-md-3 col-lg-4 offset-lg-4 ribbon6 my-5">
    <h2>お問合せ</h2>
  </div>
  <%= render 'layouts/errors', model: @contact %>
  <div class="row">
    <div class="col-8 offset-2">
      <%= form_with model: @contact, url: contacts_path, local: true do |f| %>
      <div class="form-group">
        <%= f.label :name, "お名前" %>
        <%= f.text_field :name, autofocus: true, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :email, "返信用メールアドレス" %>
        <%= f.email_field :email, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :message, "お問合せ内容" %>
        <%= f.text_area :message, size: "10x10", class: "form-control" %>
      </div>
      <div>
        <%= f.submit "送信", class: "btn btn-secondary px-4" %>
      </div>
    <% end %>
    </div>
  </div>
</div>
